{
  "name": "@capri-js/monorepo",
  "private": true,
  "scripts": {
    "dev": "tsc --build packages --watch",
    "clean": "tsc --build packages --clean",
    "build": "tsc --build packages",
    "lint": "eslint . && prettier --check .",
    "lint:fix": "eslint --fix . && prettier --write .",
    "test": "vitest --run",
    "examples": "node .github/build-examples",
    "release": "multi-semantic-release --sequential-init --deps.prefix ^"
  },
  "devDependencies": {
    "@qiwi/multi-semantic-release": "^6.5.1",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^9.0.1",
    "@testing-library/dom": "^8.19.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/user-event": "^14.4.3",
    "@types/jsdom": "^20.0.1",
    "@types/node": "^18.11.17",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "@vitejs/plugin-legacy": "^3.0.1",
    "eslint": "^8.30.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "jsdom": "^20.0.3",
    "prettier": "^2.8.1",
    "typescript": "^4.9.4",
    "vitest": "^0.25.8"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "release": {
    "branches": [
      "main",
      {
        "name": "next",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  }
}
